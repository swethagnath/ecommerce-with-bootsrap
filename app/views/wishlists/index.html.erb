<div class="jumbotron">
  <h1 class="display-4 text-center">wishlists</h1>
</div>
<div class="container">
	<table border="1" class="table">
		<thead>
			<th></th>
			<th>name</th>
			<th>image</th>
			<th>add to cart</th>
		</thead>
		<%current_user.wishlists.each_with_index do |wishlist,index|%>
			<tr>
				<td><%= index+1 %></td>
				<td><%= wishlist.product.name%></td>
				<td><%= image_tag(wishlist.product.feature_image_url,size:"400x300")%></td>
				<td>
					<%=form_for(@cart_line_item,remote:true) do |f|%>
						<%= f.select :quantity,(1..2).to_a%><br><br>
						<%=f.hidden_field :product_id,value:wishlist.product.id%>
						<%= f.submit "add to cart",class:"btn btn-success"%>
					<%end%> 
				</td>
			</tr>
		<%end%>
	</table>
</div>